import ./controllers

fetch = (req, res, next) ->
  controllers
    .fetch(req.params.slug, req.headers['x-frigg-worker-host'])
    .then((job) ->
      return res.json({ job: job })
    )
    .catch(next)

redirect = (req, res) ->
  return res.redirect('http://frigg.io')

webhooks = {
  github: (req, res, next) ->
    event = req.headers['x-github-event']
    return controllers
      .handleWebhook('github', event, req.body)
      .then(() ->
        res.status(202).send(
          '"#{event}"-event put on queue, it will be handled eventually'
        )
      )
      .catch(next)
  general: (req, res, next) ->
    return controllers
      .handleWebhook(req.params.slug, null, req.body)
      .then(() ->
        res.status(202).send(
          'event put on "#{req.params.slug}"-queue, it will be handled eventually'
        )
      )
      .catch(next)
}
